#!/usr/local/bin/tcsh

# $Id: genJavadoc,v 1.5 2000/05/10 16:50:21 locher Exp $

set SOURCE = pse/kg2k/src/jobmatch/
set INDIR = /tmp/$SOURCE
set OUTDIR = /home/pse4/public_html/doc
set CONTENTFILE = $INDIR/javadocFiles

set PARAMS = "-package -splitindex -use"
set HEADER = "<b>PSE 2000 Group 4</b>"

cd /tmp
/usr/local/bin/cvs co $SOURCE
mkdir -p $OUTDIR
cd $INDIR
/usr/local/jdk1.2.2/bin/javadoc $PARAMS -header "$HEADER" -sourcepath $INDIR -d $OUTDIR @$CONTENTFILE
chmod -R 775 $OUTDIR/* $OUTDIR